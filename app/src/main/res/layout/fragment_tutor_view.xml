<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplayName"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_name_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Name:"
        />

    <TextView
        android:id="@+id/tutor_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentLeft="true"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplayAge"
        android:layout_below="@+id/layoutDisplayName"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_age_display_label"
        android:text="Age:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        style="@style/stylelabel_textview"
        android:layout_below="@+id/tutor_name_display_label" />

    <TextView
        android:id="@+id/tutor_age_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_name_display"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplayQualification"
        android:background="@drawable/layoutboxbackground"
        android:layout_below="@+id/layoutDisplayAge"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_qualification_display_label"
        android:layout_below="@+id/tutor_age_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentLeft="true"
        android:text="Qualification"/>

    <TextView
        android:id="@+id/tutor_qualification_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_age_display"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplaySubject"
        android:layout_below="@+id/layoutDisplayQualification"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_subject_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/tutor_qualification_display_label"
        android:text="Subject:"/>

    <TextView
        android:id="@+id/tutor_subject_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_qualification_display"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplayPhone"
        android:layout_below="@+id/layoutDisplayEmail"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_phone_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/tutor_subject_display_label"
        android:text="Phone Number:"/>

    <TextView
        android:id="@+id/tutor_phone_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/tutor_subject_display"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:id="@+id/layoutDisplayLevel"
        android:layout_below="@+id/layoutDisplaySubject"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tutor_level_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_phone_display_label"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Level:"/>

    <TextView
        android:id="@+id/tutor_level_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_phone_display"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplayPrice"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:layout_below="@+id/layoutDisplayPhone"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_price_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_level_display_label"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Price per session:"/>

    <TextView
        android:id="@+id/tutor_price_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_level_display"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDisplayEmail"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:layout_below="@+id/layoutDisplayLevel"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tutor_email_id_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_price_display_label"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Email ID:"/>

    <TextView
        android:id="@+id/tutor_email_id_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_price_display"
        style="@style/stylevalue_textview"
        android:fontFamily="sans-serif-condensed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:id="@+id/layoutDisplayExperience"
        android:layout_below="@+id/layoutDisplayPrice"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tutor_experience_display_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tutor_price_display_label"
        style="@style/stylelabel_textview"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Experience:"/>

        <TextView
            android:id="@+id/tutor_experience_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tutor_email_id_display"
            android:text="I have been teaching English for 3 years"
            style="@style/stylevalue_textview"
            android:fontFamily="sans-serif-condensed"/>




    </LinearLayout>
    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDisplayExperience"
        android:padding="5dp"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/image_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/phone_call1"
        android:backgroundTint="@color/colorAccent"
        android:backgroundTintMode="add"
        android:foregroundTint="@color/colorAccent"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/message_icon1"
        android:visibility="gone"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutDisplayExperience"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Write a review"
        android:id="@+id/btnWriteReview"
        style="@style/buttonstyle"
        />

    <EditText
        android:id="@+id/addVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="Enter Youtube video link"
        android:layout_below="@+id/btnWriteReview"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addVideo"
        android:text="UPLOAD"
        android:layout_marginTop="10dp"
        style="@style/buttonstyle"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:onClick="onSubmitClick"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:elevation="5dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:id="@+id/layoutDisplayAvailability"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tutor_experience_display_availability"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tutor_price_display_label"
            style="@style/stylelabel_textview"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="Availability:"/>

        <TextView
            android:id="@+id/tutor_availability_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tutor_email_id_display"
            android:text="I have been teaching English for 3 years"
            style="@style/stylevalue_textview"
            android:fontFamily="sans-serif-condensed"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutvaluesstyles"
        android:background="@drawable/layoutboxbackground"
        android:layout_below="@+id/layoutDisplayAvailability"
        android:id="@+id/layoutDisplayMessage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tutor_message_display_availability"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tutor_price_display_label"
            style="@style/stylelabel_textview"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="Message:"/>

        <TextView
            android:id="@+id/tutor_message_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tutor_email_id_display"
            android:text="I have been teaching English for 3 years"
            style="@style/stylevalue_textview"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>


</RelativeLayout>