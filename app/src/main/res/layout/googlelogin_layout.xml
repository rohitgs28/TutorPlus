        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="Find Tutor in Your Area"
        android:textColor="#000000"
        android:backgroundTint="#eaeae1"
        android:elevation="5dp"/>

